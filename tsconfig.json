{
  "compilerOptions": {
    "module": "commonjs",                                                            
    "target": "es6",
    "outDir": "./dist",                                 
    "moduleResolution": "node",
    "removeComments": true,                        
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                
    "noImplicitAny": true,                           
    "skipLibCheck": true,
    "sourceMap": true,                    
  },
  "include": [
    "src/**/*"
  ]
}
